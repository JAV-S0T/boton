boolean a = true;

void main () {
  rectangulo ();
  animate (mecanica);

}

void rectangulo () {
  rect (110,110,100,100);
}

void gogo(){
    background(199,94,94);
    rect (110,110,100,100);
  	
}
void mecanica (){
  if (mousePressed){
    if (a == true){
      if(mouseX > 110 && mouseX < 210 && mouseY > 110 && mouseY < 210){
    a = false;
   
  }}}
  if (a == false){
     background(30,211,70);
  }
  if(!mousePressed){
    gogo();
    a = true;
  }
	}

background(199,94,94); 
  
